---
import { Image } from "astro:assets";
import { Twitter } from "lucide-react";
---

<footer class="bg-gray-50 border-t">
  <div class="container mx-auto px-4 py-12">
    <div class="flex flex-col md:flex-row items-center justify-between gap-6">
      <div>
        <Image
          src="/crebachi-logo.png"
          alt="クリエイターのうえきばち"
          width={500}
          height={200}
          class="w-auto h-20"
        />
      </div>
      <div class="flex items-center gap-6">
        <a
          href="https://twitter.com/creator_pot"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-[#219e9b] transition-colors"
        >
          <Twitter client:load class="h-6 w-6" />
          <span class="sr-only">X</span>
        </a>
      </div>
    </div>
    <div class="mt-8 text-center text-sm text-gray-600">
      <p>
        &copy; {new Date().getFullYear()} クリエイターのうえきばち All rights reserved.
      </p>
    </div>
  </div>
</footer>
